<head>
  <link rel="stylesheet" href="/style/notifications.css" />
</head>
<div class="main-section">
  <section class="state-cards">
    <div class="state-group">
      <div class="state-content">
        <div class="state-info">
          <h3>Total</h3>
          <p id="total-games">12</p>
        </div>
        <i class="fas fa-bell stat-icon"></i>
      </div>
    </div>
    <div class="state-group">
      <div class="state-content">
        <div class="state-info">
          <h3>Unread</h3>
          <p id="win-rate">4</p>
        </div>
        <i class="fas fa-circle stat-icon unread"></i>
      </div>
    </div>
    <div class="state-group">
      <div class="state-content">
        <div class="state-info">
          <h3>Friend Requests</h3>
          <p id="streak">2</p>
        </div>
        <svg
          class="filter-icon"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
          <circle cx="8.5" cy="7" r="4"></circle>
          <line x1="20" y1="8" x2="20" y2="14"></line>
          <line x1="23" y1="11" x2="17" y2="11"></line>
        </svg>
      </div>
    </div>
    <div class="state-group">
      <div class="state-content">
        <div class="state-info">
          <h3>Game Invites</h3>
          <p id="average-guesses">3</p>
        </div>
        <i class="fas fa-gamepad stat-icon"></i>
      </div>
    </div>
  </section>

  <section class="filter-notifications">
    <header class="header-filter">
      <svg
        class="filter-icon"
        width="19"
        height="19"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
      </svg>
      <h3>Filter Notifications</h3>
    </header>

    <div class="notifications-controls">
      <div class="search-content">
        <i class="fa-solid fa-magnifying-glass"></i>
        <input
          type="text"
          class="search-notifications"
          placeholder="Search notifications..."
        />
      </div>

      <div class="dropdown-content">
        <button class="dropdown" id="typeDropdownBtn">
          <span>All Types</span><i class="fa-solid fa-angle-down"></i>
        </button>
        <div class="dropdown-menu" id="typeDropdownMenu">
          <label class="dropdown-item selected">
            <input type="radio" name="typeFilter" value="all" checked />
            <span>All Types</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="typeFilter" value="friend-requests" />
            <span>Friend Requests</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="typeFilter" value="game-invites" />
            <span>Game Invites</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="typeFilter" value="achievements" />
            <span>Achievements</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="typeFilter" value="messages" />
            <span>Messages</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="typeFilter" value="system" />
            <span>System</span>
          </label>
        </div>
      </div>

      <div class="sort-dropdown-content">
        <button class="dropdown" id="sortDropdownBtn">
          <span>Newest</span><i class="fa-solid fa-angle-down"></i>
        </button>
        <div class="dropdown-menu" id="sortDropdownMenu">
          <label class="dropdown-item selected">
            <input type="radio" name="sortFilter" value="newest" checked />
            <span>Newest</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="sortFilter" value="oldest" />
            <span>Oldest</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="sortFilter" value="priority" />
            <span>Priority</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="sortFilter" value="type" />
            <span>Type</span>
          </label>
        </div>
      </div>

      <button class="mark-all-btn">Mark All Read</button>
    </div>
  </section>

  <section class="notifications-section">
    <h2>Notifications</h2>
    <div class="notifications-list">
    </div>
  </section>
</div>
<script src="js/main.js"></script>
<script src="js/notifications.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    window.mainUtils.initializeCommon();
    window.notificationUtils.initializeNotifications();
  });
</script>
