<head>
  <link rel="stylesheet" href="/style/notifications.css" />
</head>
<div class="main-section">
  <section class="state-cards">
    <div class="state-group">
      <div class="state-content">
        <div class="state-info">
          <h3>Total</h3>
          <p id="total-games">12</p>
        </div>
        <i class="fas fa-bell stat-icon"></i>
      </div>
    </div>
    <div class="state-group">
      <div class="state-content">
        <div class="state-info">
          <h3>Unread</h3>
          <p id="win-rate">4</p>
        </div>
        <i class="fas fa-circle stat-icon unread"></i>
      </div>
    </div>
    <div class="state-group">
      <div class="state-content">
        <div class="state-info">
          <h3>Friend Requests</h3>
          <p id="streak">2</p>
        </div>
        <svg
          class="filter-icon"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
          <circle cx="8.5" cy="7" r="4"></circle>
          <line x1="20" y1="8" x2="20" y2="14"></line>
          <line x1="23" y1="11" x2="17" y2="11"></line>
        </svg>
      </div>
    </div>
    <div class="state-group">
      <div class="state-content">
        <div class="state-info">
          <h3>Game Invites</h3>
          <p id="average-guesses">3</p>
        </div>
        <i class="fas fa-gamepad stat-icon"></i>
      </div>
    </div>
  </section>

  <section class="filter-notifications">
    <header class="header-filter">
      <svg
        class="filter-icon"
        width="19"
        height="19"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
      </svg>
      <h3>Filter Notifications</h3>
    </header>

    <div class="notifications-controls">
      <div class="search-content">
        <i class="fa-solid fa-magnifying-glass"></i>
        <input
          type="text"
          class="search-notifications"
          placeholder="Search notifications..."
        />
      </div>

      <div class="dropdown-content">
        <button class="dropdown" id="typeDropdownBtn">
          <span>All Types</span><i class="fa-solid fa-angle-down"></i>
        </button>
        <div class="dropdown-menu" id="typeDropdownMenu">
          <label class="dropdown-item selected">
            <input type="radio" name="typeFilter" value="all" checked />
            <span>All Types</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="typeFilter" value="friend-requests" />
            <span>Friend Requests</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="typeFilter" value="game-invites" />
            <span>Game Invites</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="typeFilter" value="achievements" />
            <span>Achievements</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="typeFilter" value="messages" />
            <span>Messages</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="typeFilter" value="system" />
            <span>System</span>
          </label>
        </div>
      </div>

      <div class="sort-dropdown-content">
        <button class="dropdown" id="sortDropdownBtn">
          <span>Newest</span><i class="fa-solid fa-angle-down"></i>
        </button>
        <div class="dropdown-menu" id="sortDropdownMenu">
          <label class="dropdown-item selected">
            <input type="radio" name="sortFilter" value="newest" checked />
            <span>Newest</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="sortFilter" value="oldest" />
            <span>Oldest</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="sortFilter" value="priority" />
            <span>Priority</span>
          </label>
          <label class="dropdown-item">
            <input type="radio" name="sortFilter" value="type" />
            <span>Type</span>
          </label>
        </div>
      </div>

      <button class="mark-all-btn">Mark All Read</button>
    </div>
  </section>

  <section class="notifications-section">
    <h2>Notifications (12)</h2>
    <div class="notifications-list">
      <div class="notification-item unread">
        <div class="notification-avatar friend-request">
          <i class="fas fa-user"></i>
        </div>
        <div class="notification-content">
          <div class="notification-header">
            <span class="notification-type">Friend Request</span>
            <span class="notification-badge"></span>
          </div>
          <div class="notification-text">John wants to be your friend</div>
          <div class="notification-time">5m ago</div>
          <div class="notification-actions">
            <button class="action-btn accept">
              <i class="fas fa-check"></i> Accept
            </button>
            <button class="action-btn decline">
              <i class="fas fa-times"></i> Decline
            </button>
          </div>
        </div>
      </div>

      <div class="notification-item unread">
        <div class="notification-avatar game-invite">
          <i class="fas fa-gamepad"></i>
        </div>
        <div class="notification-content">
          <div class="notification-header">
            <span class="notification-type">Game Invitation</span>
            <span class="notification-badge"></span>
          </div>
          <div class="notification-text">
            Sarah invited you to play WordGuess
          </div>
          <div class="notification-time">15m ago</div>
          <div class="notification-actions">
            <button class="action-btn join-game">
              <i class="fas fa-gamepad"></i> Join Game
            </button>
            <button class="action-btn decline">
              <i class="fas fa-times"></i> Decline
            </button>
          </div>
        </div>
      </div>

      <div class="notification-item">
        <div class="notification-avatar achievement">
          <i class="fas fa-trophy"></i>
        </div>
        <div class="notification-content">
          <div class="notification-header">
            <span class="notification-type">Achievement Unlocked</span>
          </div>
          <div class="notification-text">
            You've won 10 games in a row - Streak Master!
          </div>
          <div class="notification-time">20m ago</div>
        </div>
      </div>

      <div class="notification-item">
        <div class="notification-avatar message">
          <i class="fas fa-comment"></i>
        </div>
        <div class="notification-content">
          <div class="notification-header">
            <span class="notification-type">New Message</span>
          </div>
          <div class="notification-text">Alex: Great game! Want a rematch?</div>
          <div class="notification-time">1h ago</div>
        </div>
      </div>

      <div class="notification-item">
        <div class="notification-avatar system">
          <i class="fas fa-cog"></i>
        </div>
        <div class="notification-content">
          <div class="notification-header">
            <span class="notification-type">System Update</span>
          </div>
          <div class="notification-text">New word packs are now available!</div>
          <div class="notification-time">2h ago</div>
        </div>
      </div>

      <div class="notification-item unread">
        <div class="notification-avatar game-invite">
          <i class="fas fa-gamepad"></i>
        </div>
        <div class="notification-content">
          <div class="notification-header">
            <span class="notification-type">Game Invitation</span>
            <span class="notification-badge"></span>
          </div>
          <div class="notification-text">
            Loay invited you to play WordGuess
          </div>
          <div class="notification-time">30m ago</div>
          <div class="notification-actions">
            <button class="action-btn join-game">
              <i class="fas fa-gamepad"></i> Join Game
            </button>
            <button class="action-btn decline">
              <i class="fas fa-times"></i> Decline
            </button>
          </div>
        </div>
      </div>

      <div class="notification-item">
        <div class="notification-avatar achievement">
          <i class="fas fa-star"></i>
        </div>
        <div class="notification-content">
          <div class="notification-header">
            <span class="notification-type">Level Up!</span>
          </div>
          <div class="notification-text">
            Congratulations! You've reached level 15
          </div>
          <div class="notification-time">4h ago</div>
        </div>
      </div>

      <div class="notification-item">
        <div class="notification-avatar friend-request">
          <i class="fas fa-user"></i>
        </div>
        <div class="notification-content">
          <div class="notification-header">
            <span class="notification-type">Friend Request</span>
          </div>
          <div class="notification-text">Emma wants to be your friend</div>
          <div class="notification-time">5h ago</div>
          <div class="notification-actions">
            <button class="action-btn accept">
              <i class="fas fa-check"></i> Accept
            </button>
            <button class="action-btn decline">
              <i class="fas fa-times"></i> Decline
            </button>
          </div>
        </div>
      </div>

      <div class="notification-item">
        <div class="notification-avatar message">
          <i class="fas fa-comment"></i>
        </div>
        <div class="notification-content">
          <div class="notification-header">
            <span class="notification-type">New Message</span>
          </div>
          <div class="notification-text">Chris: Thanks for the game tips!</div>
          <div class="notification-time">6h ago</div>
        </div>
      </div>

      <div class="notification-item">
        <div class="notification-avatar system">
          <i class="fas fa-wrench"></i>
        </div>
        <div class="notification-content">
          <div class="notification-header">
            <span class="notification-type">Maintenance Complete</span>
          </div>
          <div class="notification-text">
            Server maintenance has been completed successfully
          </div>
          <div class="notification-time">12h ago</div>
        </div>
      </div>
      <nav class="friend-pagination">
        <div class="pagination-info">
          <p>Showing 21 to 30 of 123 Notifications</p>
        </div>

        <ul class="pagination">
          <li class="page-item">
            <button class="page-slide back" data-page="2">
              <i class="fa-solid fa-chevron-left"></i>
              <span>Back</span>
            </button>
          </li>

          <!-- page buttons (temp data) -->
          <li class="page-item">
            <button class="page-curr" data-page="1">1</button>
          </li>
          <li class="page-item">
            <button class="page-curr" data-page="2">2</button>
          </li>
          <li class="page-item">
            <button class="page-curr active" data-page="3">3</button>
          </li>
          <li class="page-item">
            <button class="page-curr" data-page="4">4</button>
          </li>
          <!-- ellipsis (temp jump target) -->
          <li class="page-item">
            <button
              class="page-ellipsis"
              data-page="11"
              title="Jump to page 11"
            >
              <i class="fa-solid fa-ellipsis"></i>
            </button>
          </li>

          <li class="page-item">
            <button class="page-curr" data-page="12">12</button>
          </li>

          <li class="page-item">
            <button class="page-slide next" data-page="4">
              <span>Next</span>
              <i class="fa-solid fa-chevron-right"></i>
            </button>
          </li>
        </ul>
      </nav>
    </div>
  </section>
</div>
<script src="js/main.js"></script>
<script src="js/notifications.js"></script>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    window.mainUtils.initializeCommon();
  });
</script>
