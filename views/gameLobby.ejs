<head>
  <link rel="stylesheet" href="/style/gameLobby.css" />
</head>
<div class="main-section">
  <div class="content-area">
    <div class="tab-header">
      <button class="tab-button active" data-tab="browse">Browse Rooms</button>
      <button class="tab-button" data-tab="create">Create Room</button>
      <button class="tab-button" data-tab="join">Join Room</button>
    </div>
    <div class="tab-content">
      <!-- Browse Rooms Tab -->
      <div class="tab-pane active" id="browse-tab">
        <div class="section-header">
          <i class="fas fa-users"></i>
          Active Rooms
        </div>
        <div class="room-list"></div>
      </div>

      <!-- Create Room Tab -->
      <div class="tab-pane" id="create-tab">
        <div class="form-section">
          <div class="form-title">
            <i class="fas fa-cog"></i>
            Create Game Room
          </div>

          <div class="form-group">
            <label class="form-label">Room Name (Optional)</label>
            <input
              type="text"
              class="form-input"
              placeholder="My Awesome Word Game"
              aria-label="room name"
            />
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="form-label">Word Length</label>
              <select class="form-select" id="wordLength">
                <option value="4">4 Letters (Easy)</option>
                <option value="5" selected>5 Letters (Classic)</option>
                <option value="6">6 Letters (Hard)</option>
                <option value="7">7 Letters (Expert)</option>
              </select>
            </div>

            <div class="form-group">
              <label class="form-label">Max Players</label>
              <select class="form-select" id="maxPlayers">
                <option value="2" selected>2 Players</option>
                <option value="3">3 Players</option>
                <option value="4">4 Players</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label class="form-label">Language</label>
              <select class="form-select" aria-label="Language select">
                <option value="en">ðŸ‡ºðŸ‡¸ English</option>
                <option value="ar">ðŸ‡¦ðŸ‡ª Ø§Ù„Ø¹Ø±Ø¨ÙŠØ© (Arabic)</option>
                <option value="zh">ðŸ‡¨ðŸ‡³ Chinese (ç®€ä½“ä¸­æ–‡)</option>
                <option value="de">ðŸ‡©ðŸ‡ª German (Deutsch)</option>
                <option value="es">ðŸ‡ªðŸ‡¸ Spanish</option>
                <option value="fr">ðŸ‡«ðŸ‡· French</option>
              </select>
            </div>

            <div class="form-group">
              <label class="form-label">Max Tries</label>
              <select class="form-select" id="maxTries">
                <option value="4">4 Tries (Hard)</option>
                <option value="5">5 Tries (Normal)</option>
                <option value="6" selected>6 Tries (Classic)</option>
                <option value="7">7 Tries (Easy)</option>
                <option value="8">8 Tries (Beginner)</option>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label
              class="form-label form-input"
              style="
                display: flex;
                align-items: center;
                gap: 12px;
                cursor: pointer;
              "
            >
              <input
                type="checkbox"
                id="isPrivate"
                class="form-checkbox"
                style="width: 18px; height: 18px; cursor: pointer"
              />
              <span style="display: flex; flex-direction: column; gap: 4px">
                <span style="font-weight: 500">Private Room</span>
                <span style="font-size: 13px; color: #64748b; font-weight: 400">
                  Only players with the room code can join
                </span>
              </span>
            </label>
          </div>

          <div class="difficulty-preview" style="position: relative">
            <div class="difficulty-badge-corner" id="difficultyBadge">
              Classic
            </div>
            <div class="preview-title">Difficulty Preview</div>
            <div class="preview-stats">
              <div class="stat-item">
                <div class="stat-number" id="previewLetters">5</div>
                <div class="stat-label">Letters</div>
              </div>
              <div class="stat-item">
                <div class="stat-number" id="previewTries">6</div>
                <div class="stat-label">Tries</div>
              </div>
              <div class="stat-item">
                <div class="stat-number" id="previewPlayers">4</div>
                <div class="stat-label">Players</div>
              </div>
            </div>
          </div>

          <button class="create-btn">
            <i class="fas fa-plus"></i>
            Create Room
          </button>
        </div>
      </div>

      <!-- Join Room Tab -->
      <div class="tab-pane" id="join-tab">
        <div class="join-form">
          <h2 class="join-title">Join Game Room</h2>
          <p class="join-description">Room Code</p>

          <input
            type="text"
            class="code-input"
            placeholder="Enter 6-character code"
            maxlength="6"
          />

          <button class="join-room-btn" id="joinRoomBtn">Join Room</button>

          <p class="join-help">
            Ask your friend for their room code to join their game
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="game-modes">
    <div class="mode-card">
      <div class="mode-badge badge-easy">Easy</div>
